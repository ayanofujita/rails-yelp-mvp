<div class="col-md-5 m-auto">
  <h3>New Review</h3>
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <div class="form-group">
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit class: "btn btn-primary"%>
    </div>
  <% end %>
  <hr>
  <%= link_to "Back to #{@restaurant.name}'s Reviews", restaurant_reviews_path(@restaurant), class: "text-decoration-none" %>
</div>
