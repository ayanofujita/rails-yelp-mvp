<div class="col-md-5 m-auto">
  <h3>New Restaurant</h3>
  <%= simple_form_for(@restaurant) do |f| %>
    <div class="form-group">
      <%= f.input :name %>
      <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
  <hr>
  <%= link_to "Back to Restaurants", restaurants_path, class: "text-decoration-none" %>
</div>
